<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailPage"
    android:background="#ededed">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:backgroundTint="#ededed" />
    <TextView
        android:id="@+id/textnama"
        android:hint="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/gambar"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"/>



    ---------------message---------------

    <ImageButton
        android:id="@+id/messagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textnama"
        android:layout_marginTop="26dp"
        android:backgroundTint="#ededed"/>

    <ImageView
        android:id="@+id/message"
        android:src="@drawable/messageicon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textnama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/textmessage"
        android:text="Pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    ---------------Call---------------

    <ImageButton
        android:id="@+id/callbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/message"
        android:layout_below="@+id/textnama"
        android:layout_marginTop="29dp"
        android:layout_marginRight="73dp"
        android:backgroundTint="#ededed"/>
    <ImageView
        android:id="@+id/call"
        android:src="@drawable/callicon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@+id/message"
        android:layout_below="@+id/textnama"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"/>
    <TextView
        android:id="@+id/textcall"
        android:text="Panggil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_toLeftOf="@+id/textmessage"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"/>

    ---------------Video---------------

    <ImageButton
        android:id="@+id/videobutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/message"
        android:layout_below="@id/textnama"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="74dp"
        android:backgroundTint="#ededed"/>

    <ImageView
        android:id="@+id/Video"
        android:src="@drawable/videoicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/message"
        android:layout_below="@+id/textnama"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="70dp"/>
    <TextView
        android:id="@+id/textvideo"
        android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_toRightOf="@+id/textmessage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="87dp" />



    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="#b8b8b8"
        android:layout_below="@id/textmessage"
        android:layout_marginTop="25dp"/>



<androidx.cardview.widget.CardView
    android:layout_width="400dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textcall"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="50dp"
    android:id="@+id/cardviewDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/gambar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/callicon"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/textnoHp"
            android:hint="NoHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/gambar2"
            android:layout_toEndOf="@+id/gambar2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/Lokasi"
            android:text="Ponsel | Indonesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/gambar2"
            android:layout_toEndOf="@+id/gambar2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textnoHp"
            />
        <ImageView
            android:id="@+id/gambar3"
            android:src="@drawable/messageicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/gambar2"
            android:layout_marginLeft="280dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>



</RelativeLayout>